<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/light_gray"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:textColor="@color/black"
        android:id="@+id/txtPersonalBalance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:textSize="14sp"
        android:text="Seu saldo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/openeye"
        android:layout_marginLeft="8dp"
        app:layout_constraintTop_toTopOf="@id/txtPersonalBalance"
        app:layout_constraintStart_toEndOf="@+id/txtPersonalBalance"
        app:layout_constraintBottom_toBottomOf="@id/txtPersonalBalance"/>
    <TextView
        android:textStyle="bold"
        android:textSize="24sp"
       android:padding="24dp"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="@string/countValue"
        android:textColor="@color/green"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txtPersonalBalance"
        />

</androidx.constraintlayout.widget.ConstraintLayout>